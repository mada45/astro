---
import BaseLayout from '../../layouts/layout.astro'

const posts = await Astro.glob('../posts/*.md')
const tags = [...new Set(posts.map((post) => post.frontmatter.tags).flat())];
---
<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    list-style: none;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>

<BaseLayout pageTitle="Tags">
    <ul class="tags">
        {tags.map(tag => <li class="tag"><a href={`/tags/${tag}`}>{tag}</a></li>)}
    </ul>
</BaseLayout>
